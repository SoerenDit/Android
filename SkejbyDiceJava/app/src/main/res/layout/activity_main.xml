        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_view_pos1SipsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="Sips:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lucky_die_pos1"
        app:layout_constraintStart_toStartOf="@+id/text_view_pos1Name" />

    <TextView
        android:id="@+id/text_view_pos4Sips"
