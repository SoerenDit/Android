    <TextView
        android:id="@+id/text_view_pos3Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="pos3Name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/image_view_pos3"
        app:layout_constraintStart_toStartOf="@+id/image_view_pos3"
        app:layout_constraintTop_toBottomOf="@+id/image_view_pos3" />

    <TextView
        android:id="@+id/text_view_pos4Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
