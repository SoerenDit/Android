        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Sips:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/text_view_pos4Name"
        app:layout_constraintTop_toBottomOf="@+id/text_view_pos4Name" />

    <ImageView
        android:id="@+id/image_view_die1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_pos1Name"
        app:layout_constraintStart_toStartOf="parent"
